<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>it.polimi.db2_project.filters.UserFilter</filter-class>
    </filter>

    <filter-mapping>

        <filter-name>UserFilter</filter-name>

        <url-pattern>/HomepageData</url-pattern>
        <url-pattern>/Leaderboard</url-pattern>
        <url-pattern>/Logout</url-pattern>
        <url-pattern>/QuestionnairePageData</url-pattern>
        <url-pattern>/SubmitAnswer</url-pattern>

        <url-pattern>/canceled.html </url-pattern>
        <url-pattern>/banned.html </url-pattern>
        <url-pattern>/homepage.html </url-pattern>
        <url-pattern>/questionnaire.html </url-pattern>
        <url-pattern>/leaderboard.html </url-pattern>
        <url-pattern>/thanks.html </url-pattern>


    </filter-mapping>


    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>it.polimi.db2_project.filters.AdminFilter</filter-class>
    </filter>

    <filter-mapping>

        <filter-name>AdminFilter</filter-name>

        <!--- all pages after 'Admin/ -->
        <url-pattern>/Admin</url-pattern>
        <url-pattern>/Admin/*</url-pattern>


    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>AnswerData</servlet-name>
        <servlet-class>it.polimi.db2_project.servlets.AnswerData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnswerData</servlet-name>
        <url-pattern>/Answer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>it.polimi.db2_project.servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>it.polimi.db2_project.servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuestionnaireData</servlet-name>
        <servlet-class>it.polimi.db2_project.servlets.QuestionnaireData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionnaireData</servlet-name>
        <url-pattern>/QuestionnaireData</url-pattern>
    </servlet-mapping>
</web-app>
